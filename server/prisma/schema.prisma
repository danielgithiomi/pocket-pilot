generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum AccountType {
  WALLET
  BANK
  SAVINGS
  CREDIT
  CURRENT
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum CategoryType {
  INCOME
  EXPENSE
}

model Account {
  id        String      @id @default(uuid())
  type      AccountType @default(CURRENT)
  name      String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  balance   Float       @default(0)

  // Link to user - one-to-many
  holder   User?   @relation(fields: [holderId], references: [id])
  holderId String?

  // Link to transaction - one-to-many
  transactions Transaction[]
}

model User {
  id        String   @id() @default(uuid())
  name      String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Link to accounts - one-to-many
  accounts Account[]
}

model Transaction {
  id     String          @id() @default(uuid())
  type   TransactionType
  amount Float           @default(0)

  // Link to account - one-to-many
  account   Account @relation(fields: [accountId], references: [id])
  accountId String
}
